<Window x:Class="Sleptify.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Sleptify"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="#101828"
        Loaded="Window_Loaded"
        StateChanged="Window_StateChanged">

    <!-- MAIN OUTER BORDER -->
    <Border CornerRadius="20"
            BorderThickness="1"
            BorderBrush="#203B5A80"
            Background="#E6101828">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="44"/>
            </Grid.RowDefinitions>

            <!-- ================= HEADER ================= -->
            <Grid Grid.Row="0" Margin="8,6,8,0" MouseDown="Header_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LOGO + TITLE -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Sleptify"
                               FontWeight="SemiBold"
                               Foreground="#CCFFFFFF"
                               FontSize="16"
                               Opacity="0.9"/>
                </StackPanel>

                <!-- CONTROL BUTTONS -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                    <!-- CONNECT SPOTIFY -->
                    <Button x:Name="ConnectBtn"
                            Content="Connect Spotify"
                            Padding="10,6"
                            FontSize="12"
                            Background="#151E2A"
                            BorderBrush="#203B5A80"
                            Foreground="#B0DFFF"
                            Cursor="Hand"
                            Click="ConnectBtn_Click"
                            Margin="0,0,6,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#202B3D"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- MINIMIZE -->
                    <Button Width="32" Height="28"
                            Click="Minimize_Click"
                            Cursor="Hand"
                            ToolTip="Minimize"
                            BorderThickness="0"
                            Background="Transparent"
                            Margin="0,0,6,0">
                        <TextBlock Text="&#xE921;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="12"
                                   Foreground="#B0DFFF"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20304A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- MAXIMIZE / RESTORE -->
                    <Button x:Name="MaxBtn"
                            Width="32" Height="28"
                            Click="Maximize_Click"
                            Cursor="Hand"
                            ToolTip="Maximize"
                            BorderThickness="0"
                            Background="Transparent"
                            Margin="0,0,6,0">
                        <TextBlock Text="&#xE922;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="12"
                                   Foreground="#B0DFFF"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20304A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- CLOSE -->
                    <Button Width="32" Height="28"
                            Click="Close_Click"
                            Cursor="Hand"
                            ToolTip="Close"
                            BorderThickness="0"
                            Background="Transparent">
                        <TextBlock Text="&#xE8BB;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="12"
                                   Foreground="#B0DFFF"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FF5F5F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ================= MAIN WEBVIEW ================= -->
            <Border Grid.Row="1"
                    Margin="12"
                    CornerRadius="16"
                    Background="#181F2C"
                    BorderBrush="#203B5A80"
                    BorderThickness="1">
                <wv2:WebView2 x:Name="Web"/>
            </Border>

            <!-- ================= FOOTER ================= -->
            <Grid Grid.Row="2" Margin="12,0,12,12">
            </Grid>
        </Grid>
    </Border>
</Window>
